<% if logged_in? %>
    <a href="/logout" class="btn-floating btn-large waves-effect waves-light red" style="float:left;"><i class="material-icons right">stop</i></a>
<% end %>
<div class="container">
  <% @contacts.each do |contact| %>
    <div class="row">
      <div class="col s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">

            <a href="/delete/<%= contact.id %>" class="btn-floating btn-large waves-effect waves-light red" style="float:right;"><i class="material-icons right">delete</i></a>


            <span><h5>~ <%= contact.name %> ~ </h5></span>
            <p><%= contact.msg %></p>
          </div>
          <div class="card-content">
            <span class="left-align"><%= contact.phone %></span>
            <span class="" style="float:right;"><%= contact.email %></span>
          </div>
        </div>
      </div>
    </div>
  <%  end %>
</div>
