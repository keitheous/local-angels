<div class="container">
  <div class="row">
    <h3>Community</h3>
    <p>Please complete your details below so local Angels can be in contact you shortly.</p>
  </div>

  <div class="row">
    <div class="col s12">
      <form action="/contacts" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <!-- first row for name and telephone -->
      <div class="row">
        <div class="input-field col s4">
          <input type="text" class="validate" name="name">
          <label for="">First Name</label>
        </div>
        <div class="input-field col s4">
          <input type="text" class="validate" name="phone">
          <label for="">Phone</label>
        </div>
        <div class="input-field col s4">
          <input type="email" class="validate" name="email">
          <label for="">Email</label>
        </div>
      </div>
      <!-- second row for text area -->
      <div class="row">
        <div class="input-field col s12">
          <textarea class="materialize-textarea" name="msg"></textarea>
          <label for="">Textarea</label>
        </div>
      </div>
      <!-- submit button -->
      <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit<i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
